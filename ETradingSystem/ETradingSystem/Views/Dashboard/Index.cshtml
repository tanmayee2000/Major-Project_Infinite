@{
                Layout = null;

}

<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Admin Dashboard</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>

                /* Custom Styles */

                body {
                    display: flex;
                    flex-direction: column;
                    min-height: 100vh;
                    margin: 0;
                    font-family: Arial, sans-serif;
                    background-color: #f5f5f5; /* added a light gray background */
                }



                .container {
/*                    flex: 1;*/
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }

                /* Adjusted Card Styles */

                .card {
                    width: 100%;
                    max-width: 400px;
                    border: none;
                    border-radius: 10px;
                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                    background-color: #fff; /* added a white background to the card */

                    padding: 20px; /* added some padding to the card */
                }

                .card-header {
                    /*            background-color: #007bff;
                    */         
                    color: black;
                    font-weight: bold;
                    border-radius: 10px 10px 0 0;
                    padding: 10px; /* added some padding to the card header */
                }

                .card-body {
                    text-align: center;
                    padding: 20px;
                }

                .card-text {
                    margin-bottom: 20px;
                }

                .btn {
                    border-radius: 20px;
                    padding: 10px 20px;
                    font-size: 16px; /* increased the font size of the button */

                    font-weight: bold; /* made the button text bold */
                }



                /* Login Section Styles */

                .login-section {
                    position: fixed;
                    top: 10px;
                    right: 10px;
                }


                .start-screen {
                    background-image: linear-gradient(to bottom, #007bff, #fff);
                    height: 300px;
                    display: flex;
                    flex-direction:column;
                    justify-content: center;
                    align-items: center;
                    color: #fff;
                    font-size: 24px;
                    font-weight: bold;
                    margin-bottom:20px;
                }

                    .start-screen h2 {
                        margin-bottom: 10px;
                    }

                    .start-screen p {
                        font-size: 18px;
                        margin-bottom:0;
                    }

                .card:hover {
                    box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
                }

                .btn:hover {
                    background-color: #333;
                    color: #fff;
                }
    </style>

</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">

        <div class="container">

            <a class="navbar-brand" href="#">Admin Dashboard</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">

                <span class="navbar-toggler-icon"></span>

            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav ml-auto">

                    <li class="nav-item ml-auto">

                        <a class="nav-link" href="@Url.Action("Login", "AdminValidation")">Log-Out <span class="sr-only"></span></a>

                    </li>

                </ul>

            </div>

        </div>

    </nav>

    <div class="start-screen">

        <h2>Welcome to Admin Dashboard</h2>

        <p>You can manage Customer, Vendors, and Product Categories from this dashboard.</p>

    </div>

    <div class="container mt-5">

        <div class="row mt-4 justify-content-center">

            <div class="col-lg-6">

                <div class="card">

                    <div class="card-header">

                        Customer Management

                    </div>

                    <div class="card-body">

                        <p class="card-text">Manage Customers: Delete ,view Details.</p>

                        <a href="@Url.Action("Index", "AdminCustomers")" class="btn btn-primary">Manage Customer</a>

                    </div>

                </div>

            </div>

            <div class="col-lg-6">

                <div class="card">

                    <div class="card-header">

                        Vendor Management

                    </div>

                    <div class="card-body">

                        <p class="card-text">Manage Vendors: view details, edit category, edit.</p>

                        <a href="@Url.Action("Index", "AdminVendors")" class="btn btn-success">Manage Vendor</a>

                    </div>

                </div>

            </div>

        </div>

    </div>



    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>
