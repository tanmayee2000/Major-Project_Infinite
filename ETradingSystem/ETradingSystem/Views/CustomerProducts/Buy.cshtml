@{
    ViewBag.Title = "Buy";
}

<h2>Buy</h2>

<h3>Are you sure you want to buy this product?</h3>

<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @ViewBag.ProductName
        </dd>

        <dt>
            @Html.DisplayName("Product Price")
        </dt>

        <dd>
            @ViewBag.ProductPrice
        </dd>

        <dt>
            @Html.DisplayName("Product Description")
        </dt>

        <dd>
            @ViewBag.ProductDescription
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Buy" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>