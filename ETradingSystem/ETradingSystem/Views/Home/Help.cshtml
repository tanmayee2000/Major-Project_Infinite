        }

        h2 {
            color: #007bff;
            margin-top: 40px;
            margin-bottom: 30px;
        }

        .contact-details-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .contact-details {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: calc(50% - 10px); /* Set width to half of the container width with gap */

            cursor: pointer; /* Add cursor pointer */

            transition: transform 0.3s ease; /* Add transition effect */

            display: flex; /* Add display flex to align image and content */

            align-items: center; /* Vertically align image and content */

            justify-content: space-between; /* Add justify-content to align image to the right */
        }

            .contact-details:hover {
                transform: scale(1.05); /* Scale up on hover */
            }

                .contact-details:hover .content {
                    background-image: linear-gradient(to right, #4CAF50, #FF9800); /* Add gradient effect on hover */

                    background-clip: text; /* Clip background to text */

                    -webkit-text-fill-color: transparent; /* Make text transparent */
                }

            .contact-details img {
                width: 150px; /* Set image width */

                height: 150px; /* Set image height */

                border-radius: 50%; /* Make image circular */
            }

            .contact-details .content {
                transition: background-image 0.3s ease; /* Add transition effect to background image */
            }
    </style>

</head>

